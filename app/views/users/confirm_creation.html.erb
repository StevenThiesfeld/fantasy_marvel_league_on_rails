<div class="confirm_user_creation">
<h3> User Name: <%= @new_user.name %></h3>
<h3> User Password: <%= @new_user.password %></h3>
<img src="<%= @new_user.image %>" width="160" height="180">

<%= form_for @new_user, url: "/login/user/create_profile" do |f| %>
<%= f.hidden_field :name %>
<%= f.hidden_field :password %>
<%= f.hidden_field :image %>
<%= f.submit %>
<% end  %>

